    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Python: geo-ui",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/py/indicator/geo_indicator.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (simplest configuration)",
            "program": "${file}",
            "env": {"GEO_CONFIG_LOG": true},
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug - Selected Text)",
            "program": "${selectedText}"
        }
    ]
}
